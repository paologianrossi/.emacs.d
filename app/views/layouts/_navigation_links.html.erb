<%# add navigation links to this file %>
<% if user_signed_in? -%>
  <li class="dropdown">
    <div class="profile-header-container">
      <div class="profile-header-img">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><img class="img-circle" src="<%= current_user.image_url %>" /><span class="caret"></span></a>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li role="presentation" class="divider"></li>
          <li><%= link_to "Logout", signout_path %></li>
        </ul>

      </div>
    </div>
  </li>

<% else -%>
  <li><%= link_to "Login", signin_path %></li>
<% end %>
